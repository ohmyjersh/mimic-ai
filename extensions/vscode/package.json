{
  "name": "mimic",
  "displayName": "mimic â€” Composable Persona Prompts",
  "description": "Compose LLM persona prompts from reusable fragments using the mimic MCP server.",
  "publisher": "mimic",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
"categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:mimic.compose",
    "onCommand:mimic.list",
    "onCommand:mimic.recommend",
    "onCommand:mimic.resolve",
    "onCommand:mimic.checkUpdate"
  ],
  "contributes": {
    "commands": [
      {
        "command": "mimic.compose",
        "title": "mimic: Compose a Persona Prompt"
      },
      {
        "command": "mimic.list",
        "title": "mimic: List Available Fragments"
      },
      {
        "command": "mimic.recommend",
        "title": "mimic: Recommend Fragments for a Persona"
      },
      {
        "command": "mimic.resolve",
        "title": "mimic: Resolve Fragment Graph"
      },
      {
        "command": "mimic.checkUpdate",
        "title": "mimic: Check for Updates"
      }
    ],
    "configuration": {
      "title": "Mimic",
      "properties": {
        "mimic.binaryPath": {
          "type": "string",
          "default": "mimic",
          "description": "Path to the mimic binary."
        },
        "mimic.autoDownload": {
          "type": "boolean",
          "default": true,
          "description": "Automatically download the mimic binary if not found on PATH."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
